<project basedir="." default="dist">
	<property name="app.name" value="rtfm" />
	<property name="app.version" value="1.0alpha2" />
	<property name="build.path" value="dist/build/" />
	<property name="junit.path" value="dist/junit/" />
	<property name="app.folder" value="dist/RegexTagForMusic.app/" />
	<property name="rtfm.jar" value="${app.folder}/lib/${app.name}-${app.version}.jar" />
	<property name="mf.builtby" value="Sebastien M-B: essembeh@gmail.com" />

	<!-- Clean -->
	<target name="clean">
		<delete dir="dist" />
	</target>

	<!-- BUILDING -->
	<path id="build.classpath">
		<fileset dir="lib/">
			<include name="*.jar" />
		</fileset>
	</path>
	<target name="prepare">
		<mkdir dir="${app.folder}" />
		<copy todir="${app.folder}/bin" overwrite="true">
			<fileset dir="bin" includes="**" />
		</copy>
		<copy todir="${app.folder}/lib">
			<fileset dir="lib" includes="**" />
		</copy>
		<copy todir="${app.folder}/config" overwrite="true">
			<fileset dir="config" includes="**" />
		</copy>
		<copy todir="${app.folder}/resources">
			<fileset dir="resources" includes="**" />
		</copy>
		<chmod dir="${app.folder}/bin" perm="ugo+rx" includes="*.sh"/>
	</target>
	<target name="build" depends="prepare">
		<mkdir dir="${build.path}" />
		<javac srcdir="src/" destdir="${build.path}" includes="**" includeantruntime="no">
			<classpath refid="build.classpath" />
		</javac>
	</target>
	<target name="dist" depends="build">
		<jar basedir="${build.path}" destfile="${rtfm.jar}">
			<manifest>
				<attribute name="Built-By" value="${mf.builtby}" />
			</manifest>
		</jar>
	</target>

	<!-- JUNIT -->
	<path id="junit.classpath">
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
		<pathelement location="${build.path}" />
		<pathelement location="${junit.path}" />
		<pathelement location="config/" />
		<pathelement location="resources/" />
	</path>
	<target name="build.junit" depends="build">
		<mkdir dir="${junit.path}" />
		<javac srcdir="junit/" destdir="${junit.path}" includes="**" includeantruntime="no">
			<classpath refid="junit.classpath" />
		</javac>
	</target>
	<target name="junit" depends="build.junit">
		<junit fork="yes" haltonfailure="no">
			<batchtest fork="yes" todir="${junit.path}">
				<fileset dir="${junit.path}">
					<include name="**/*Test.class" />
				</fileset>
			</batchtest>
			<formatter type="xml" />
			<classpath refid="junit.classpath" />
		</junit>
	</target>

	<!-- Specific target to use my configuration file -->
	<target name="seb" depends="dist">
		<copy file="${app.folder}/config/config-seb.xml" tofile="${app.folder}/config/config.xml" overwrite="true" />
	</target>

</project>
