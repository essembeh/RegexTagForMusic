<?xml version="1.0"?>
<rtfm>
	<tagwriters>
		<tagwriter id="eyeD3" classname="org.essembeh.rtfm.plugins.EyeD3TagWriter">
			<property name="eyed3.binary" value="/usr/bin/eyeD3" />
			<property name="eyed3.default.arguments" value="--no-color" />
			<property name="force.utf8" value="true" />
		</tagwriter>
		<tagwriter id="fake" classname="org.essembeh.rtfm.plugins.FakeTagWriter">
		</tagwriter>
	</tagwriters>

	<tagproviders>
		<tagprovider id="album">
			<artist pattern="/Albums/(.*)/.*/[0-9][0-9] - .*\.mp3" group="1" />
			<album pattern="/Albums/.*/(.*)/[0-9][0-9] - .*\.mp3" />
			<year pattern="/Albums/.*/([12][0-9][0-9][0-9]) - .*/[0-9][0-9] - .*\.mp3" optional="true" />
			<tracknumber pattern="/Albums/.*/.*/([0-9][0-9]) - .*\.mp3" />
			<trackname pattern="/Albums/.*/.*/[0-9][0-9] - (.*)\.mp3" />
			<comment value="Tagged with RegexTagForMusic" />
		</tagprovider>
		<tagprovider id="misc">
			<artist pattern="/Misc/([^/]+) - ([^/]+)\.mp3" group="1" />
			<trackname pattern="/Misc/([^/]+) - ([^/]+)\.mp3" group="2" />
			<album value="#Misc" />
			<comment value="Tagged with RegexTagForMusic" />
		</tagprovider>
		<tagprovider id="saga">
			<artist pattern="/Saga/([^/]+)/([^/]+)\.mp3" group="1" />
			<trackname pattern="/Saga/([^/]+)/([^/]+)\.mp3" group="2" />
			<album value="#Saga" />
			<comment value="Tagged with RegexTagForMusic" />
		</tagprovider>
	</tagproviders>

	<filehandlers>
		<filehandler id="ALBUM" pattern="/Albums/[^/]+/[^/]+/[0-9][0-9] - .*\.mp3" database="true">
			<tagwriter ref="eyeD3" />
			<tagprovider ref="album" />
		</filehandler>
		<filehandler id="MISC" pattern="/Misc/([^/]+) - ([^/]+)\.mp3" database="true">
			<tagwriter ref="eyeD3" />
			<tagprovider ref="misc" />
		</filehandler>
		<filehandler id="SAGA" pattern="/Saga/([^/]+)/([^/]+)\.mp3" database="true">
			<tagwriter ref="eyeD3" />
			<tagprovider ref="saga" />
		</filehandler>
		<filehandler id="COVER" pattern="/Albums/[^/]+/[^/]+/cover\.(jpg|jpeg|png)" database="true">
		</filehandler>
		<filehandler id="INVALID" pattern=".*" database="false">
		</filehandler>
	</filehandlers>

	<shell>
		<command id="scan" alternative="s" classname="org.essembeh.rtfm.shell.commands.Scan" />
		<command id="read" alternative="r" classname="org.essembeh.rtfm.shell.commands.ReadDB" />
		<command id="write" alternative="w" classname="org.essembeh.rtfm.shell.commands.WriteDB" />
		<command id="tag" alternative="t" classname="org.essembeh.rtfm.shell.commands.Tag" />
		<command id="data" alternative="d" classname="org.essembeh.rtfm.shell.commands.Data" />
		<command id="ls" alternative="l" classname="org.essembeh.rtfm.shell.commands.Show" />
		<command id="help" alternative="h" classname="org.essembeh.rtfm.shell.commands.Help" />
		<command id="quit" alternative="q" classname="org.essembeh.rtfm.shell.commands.Quit" />
	</shell>
	<properties>
		<property name="app.name" value="RegexTagForMusic" />
		<property name="app.version" value="1.0alpha1" />
		<property name="app.default.mode" value="shell" />
		<property name="scan.hidden.files" value="true" />
	</properties>
</rtfm>
