<?xml version="1.0" encoding="UTF-8"?>
<configuration-core xmlns="http://rtfm.essembeh.org/ConfigurationCore-v2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="dot">
	<!-- Substitutions are applied only on "pattern" attributes -->
	<substitutions>
		<substitution key="@SEPARATOR"   value="\."/>
		<substitution key="@ANYTHING"    value="[^/]+"/>
		<substitution key="@YEAR"        value="[12]\d{3}"/>
		<substitution key="@TRACKNUMBER" value="\d{2}"/>
		<substitution key="@MP3"         value="\.mp3"/>
	</substitutions>
	<!-- File types -->
	<filehandlers>
		<filehandler id="Music file">
			<conditions>
				<virtualpath pattern="/@ANYTHING/@ANYTHING/@TRACKNUMBER@SEPARATOR.*@MP3" />
			</conditions>
			<attributes>
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="db:export"   value="true" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<regex-attribute name="tag:artist" pattern="/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="1" />
				<regex-attribute name="tag:year"   pattern="/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="2" optional="true" />
				<regex-attribute name="tag:album"  pattern="/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="3" />
				<regex-attribute name="tag:track"  pattern="/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="4" />
				<regex-attribute name="tag:title"  pattern="/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="5" />
			</attributes>
		</filehandler>
		<filehandler id="Cover">
			<conditions>
				<virtualpath pattern="/@ANYTHING/@ANYTHING/cover\.(jpg|jpeg|png)" />
			</conditions>
			<attributes>
				<attribute name="db:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="Playlist">
			<conditions>
				<virtualpath pattern="/@ANYTHING/@ANYTHING/playlist\.m3u" />
			</conditions>
			<attributes>
				<attribute name="db:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="UNKNOWN">
			<conditions>
			</conditions>
			<attributes>
				<attribute name="db:export" value="false" />
			</attributes>
		</filehandler>
	</filehandlers>
	<!-- Tasks -->
	<tasks>
		<task id="setNonTagged" classname="org.essembeh.rtfm.tasks.UpdateAttributes">
			<property name="rtfm:tagged" value="false" />
		</task>
		<task id="setTagged" classname="org.essembeh.rtfm.tasks.UpdateAttributes">
			<property name="rtfm:tagged" value="true" />
		</task>
		<task id="JAudioTagger-id3v2.4" classname="org.essembeh.rtfm.tasks.JAudioTagger">
			<property name="version" value="ID3V2_4" />
		</task>
		<task id="JAudioTagger-id3v2.3" classname="org.essembeh.rtfm.tasks.JAudioTagger">
			<property name="version" value="ID3V2_3" />
		</task>
	</tasks>
	<actions>
		<action id="00-tagJAudioTaggeID3v2.4" description="Tag with JAudioTagger and ID3v2.4">
			<apply-on>
				<filehandler ref-id="MP3" />
			</apply-on>
			<workflow>
				<task ref-id="JAudioTagger-id3v2.4" />
			</workflow>
		</action>
		<action id="00-tagJAudioTaggeID3v2.3" description="Tag with JAudioTagger and ID3v2.3">
			<apply-on>
				<filehandler ref-id="MP3" />
			</apply-on>
			<workflow>
				<task ref-id="JAudioTagger-id3v2.3" />
			</workflow>
		</action>
	</actions>
</configuration-core>