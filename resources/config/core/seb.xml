<?xml version="1.0" encoding="UTF-8"?>
<configuration-core xmlns="http://rtfm.essembeh.org/ConfigurationCore-v2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="seb music">
	<!-- Substitutions are applied only on "pattern" attributes -->
	<substitutions>
		<substitution key="@SEPARATOR"   value=" - "/>
		<substitution key="@ANYTHING"    value="[^/]+"/>
		<substitution key="@YEAR"        value="[12]\d{3}"/>
		<substitution key="@TRACKNUMBER" value="\d{2,3}"/>
		<substitution key="@MP3"         value="\.mp3"/>
	</substitutions>
	<!-- File types -->
	<filehandlers>
		<filehandler id="Album mp3">
			<conditions>
				<virtualpath pattern="/Albums/@ANYTHING/@ANYTHING/@TRACKNUMBER@SEPARATOR@ANYTHING@MP3" />
			</conditions>
			<attributes>
				<attribute name="core:export"   value="true" />
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<regex-attribute name="tag:artist" pattern="/Albums/(@ANYTHING)/((?:(@YEAR)@SEPARATOR)?@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="1" />
				<regex-attribute name="tag:year"   pattern="/Albums/(@ANYTHING)/((?:(@YEAR)@SEPARATOR)?@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="3" optional="true" />
				<regex-attribute name="tag:album"  pattern="/Albums/(@ANYTHING)/((?:(@YEAR)@SEPARATOR)?@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="2" />
				<regex-attribute name="tag:track"  pattern="/Albums/(@ANYTHING)/((?:(@YEAR)@SEPARATOR)?@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="4" />
				<regex-attribute name="tag:title"  pattern="/Albums/(@ANYTHING)/((?:(@YEAR)@SEPARATOR)?@ANYTHING)/(@TRACKNUMBER)@SEPARATOR(@ANYTHING)@MP3" group="5" />
			</attributes>
		</filehandler>
		<filehandler id="Cover">
			<conditions>
				<virtualpath pattern="/Albums/@ANYTHING/@ANYTHING/cover\.(jpg|jpeg|png)" />
			</conditions>
			<attributes>
				<attribute name="core:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="Playlist">
			<conditions>
				<virtualpath pattern="/Albums/@ANYTHING/@ANYTHING/playlist\.m3u" />
			</conditions>
			<attributes>
				<attribute name="core:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="Single mp3">
			<conditions>
				<virtualpath pattern="/Singles/(@ANYTHING)@SEPARATOR(@ANYTHING)\.mp3" />
			</conditions>
			<attributes>
				<attribute name="core:export"   value="true" />
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<attribute name="tag:album"   value="#Single" />
				<regex-attribute name="tag:artist" pattern="/Singles/(@ANYTHING)@SEPARATOR(@ANYTHING)@MP3" group="1" />
				<regex-attribute name="tag:title"  pattern="/Singles/(@ANYTHING)@SEPARATOR(@ANYTHING)@MP3" group="2" />
			</attributes>
		</filehandler>
		<filehandler id="Saga mp3">
			<conditions>
				<virtualpath pattern="/Saga/(@ANYTHING)/(@ANYTHING)\.mp3" />
			</conditions>
			<attributes>
				<attribute name="core:export"   value="true" />
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<attribute name="tag:album"   value="#Saga" />
				<regex-attribute name="tag:artist" pattern="/Saga/(@ANYTHING)/(@ANYTHING)@MP3" group="1" />
				<regex-attribute name="tag:title"  pattern="/Saga/(@ANYTHING)/(@ANYTHING)@MP3" group="2" />
			</attributes>
		</filehandler>
		<filehandler id="Artist folder">
			<conditions>
				<virtualpath pattern="/Albums/@ANYTHING/" />
			</conditions>
			<attributes>
				<attribute name="core:export" value="false" />
				<regex-attribute name="artist" pattern="/Albums/(@ANYTHING)/" group="1" />
			</attributes>
		</filehandler>
		<filehandler id="Album folder">
			<conditions>
				<virtualpath pattern="/Albums/@ANYTHING/@ANYTHING/" />
			</conditions>
			<attributes>
				<attribute name="core:export" value="false" />
				<attribute name="hasCover"  value="false" />
				<regex-attribute name="artist" pattern="/Albums/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/" group="1" />
				<regex-attribute name="year"   pattern="/Albums/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/" group="2" optional="true" />
				<regex-attribute name="album"  pattern="/Albums/(@ANYTHING)/(?:(@YEAR)@SEPARATOR)?(@ANYTHING)/" group="3" />
			</attributes>
		</filehandler>
		<filehandler id="Untracked">
			<conditions logic="OR">
				<virtualpath pattern="/Saga/@ANYTHING/"/>
				<virtualpath pattern="/@ANYTHING/"/>
			</conditions>
			<attributes>
				<attribute name="core:ignore" value="true" />
			</attributes>
		</filehandler>
		<filehandler id="Unknown file">
			<conditions>
				<type value="FILE"/>
			</conditions>
			<attributes>
				<attribute name="core:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="Unknown folder">
			<conditions>
				<type value="FOLDER"/>
			</conditions>
			<attributes>
				<attribute name="core:export" value="false" />
			</attributes>
		</filehandler>
	</filehandlers>
	<!-- Tasks -->
	<tasks>
		<task id="setNonTagged" classname="org.essembeh.rtfm.tasks.UpdateAttributes">
			<property name="rtfm:tagged" value="false" />
		</task>
		<task id="setTagged" classname="org.essembeh.rtfm.tasks.UpdateAttributes">
			<property name="rtfm:tagged" value="true" />
		</task>
		<task id="JAudioTagger-id3v2.4" classname="org.essembeh.rtfm.tasks.JAudioTagger">
			<property name="version" value="ID3V2_4" />
		</task>
		<task id="JAudioTagger-id3v2.3" classname="org.essembeh.rtfm.tasks.JAudioTagger">
			<property name="version" value="ID3V2_3" />
		</task>
		<task id="eyed3-id3v2.4@utf8" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary"  value="scripts/eyeD3-tag.sh" />
			<property name="env.set" value="TAG_VERSION=ID3V2_4" />
			<property name="env.set" value="TAG_FORCEUTF8=true" />
			<property name="env.set" value="RTFM_ARTIST=${tag:artist}" />
			<property name="env.set" value="RTFM_ALBUM=${tag:album}" />
			<property name="env.set" value="RTFM_YEAR=${tag:year}" />
			<property name="env.set" value="RTFM_TITLE=${tag:title}" />
			<property name="env.set" value="RTFM_TRACK=${tag:track}" />
			<property name="env.set" value="RTFM_GENRE=${tag:genre}" />
			<property name="env.set" value="RTFM_COMMENT=${tag:comment}" />
		</task>
		<task id="eyed3-id3v2.3" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary"  value="scripts/eyeD3-tag.sh" />
			<property name="env.set" value="TAG_VERSION=ID3V2_3" />
			<property name="env.set" value="TAG_FORCEUTF8=true" />
			<property name="env.set" value="RTFM_ARTIST=${tag:artist}" />
			<property name="env.set" value="RTFM_ALBUM=${tag:album}" />
			<property name="env.set" value="RTFM_YEAR=${tag:year}" />
			<property name="env.set" value="RTFM_TITLE=${tag:title}" />
			<property name="env.set" value="RTFM_TRACK=${tag:track}" />
			<property name="env.set" value="RTFM_GENRE=${tag:genre}" />
			<property name="env.set" value="RTFM_COMMENT=${tag:comment}" />
		</task>
		<task id="eyed3-clean" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary" value="scripts/eyeD3-remove.sh" />
		</task>
		<task id="echo" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary"  value="scripts/dummy.sh" />
			<property name="env.set" value="RTFM_ARTIST=${tag:artist}" />
			<property name="env.set" value="RTFM_ALBUM=${tag:album}" />
			<property name="env.set" value="RTFM_YEAR=${tag:year}" />
			<property name="env.set" value="RTFM_TITLE=${tag:title}" />
			<property name="env.set" value="RTFM_TRACK=${tag:track}" />
			<property name="env.set" value="RTFM_GENRE=${tag:genre}" />
			<property name="env.set" value="RTFM_COMMENT=${tag:comment}" />
		</task>
		<task id="downloadCover" classname="org.essembeh.rtfm.tasks.Echo">
			<property name="message" value="download cover" />
		</task>
		<task id="delete" classname="org.essembeh.rtfm.tasks.Echo">
			<property name="message" value="remove the file" />
		</task>
	</tasks>
	<actions>
		<action id="00-marskAsNonTagged" description="Mark as non tagged">
			<apply-on>
				<filehandler ref-id="Album track" />
				<filehandler ref-id="Single track" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="setNonTagged" />
			</workflow>
		</action>
		<action id="10-tagEyeD3" description="Tag with eyed3">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="eyed3-clean" />
				<task ref-id="setNonTagged" />
				<task ref-id="eyed3-id3v2.4@utf8" />
				<task ref-id="setTagged" />
			</workflow>
		</action>
		<action id="11-tagJAudioTagger" description="Tag with JAudioTagger">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="JAudioTagger-id3v2.4" />
			</workflow>
		</action>
		<action id="20-removeTags" description="Remove tags using eyed3">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="eyed3-clean" />
				<task ref-id="setNonTagged" />
			</workflow>
		</action>
		<action id="99-dummy" description="Dummy script">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="echo" />
			</workflow>
		</action>
	</actions>
</configuration-core>