<?xml version="1.0" encoding="UTF-8"?>
<configuration-core xmlns="http://rtfm.essembeh.org/ConfigurationCore-v1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- File types -->
	<filehandlers>
		<filehandler id="ALBUMS">
			<conditions>
				<virtualpath matches="/Albums/[^/]+/[^/]+/\d{2,3} - .*\.mp3" />
			</conditions>
			<attributes>
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="db:export" value="true" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<regex-attribute name="tag:artist" pattern="/Albums/(.*)/((?:([12]\d\d\d) - )?.*)/(\d{2,3}) - (.*)\.\w+" group="1" />
				<regex-attribute name="tag:year"   pattern="/Albums/(.*)/((?:([12]\d\d\d) - )?.*)/(\d{2,3}) - (.*)\.\w+" group="3" optional="true" />
				<regex-attribute name="tag:album"  pattern="/Albums/(.*)/((?:([12]\d\d\d) - )?.*)/(\d{2,3}) - (.*)\.\w+" group="2" />
				<regex-attribute name="tag:track"  pattern="/Albums/(.*)/((?:([12]\d\d\d) - )?.*)/(\d{2,3}) - (.*)\.\w+" group="4" />
				<regex-attribute name="tag:title"  pattern="/Albums/(.*)/((?:([12]\d\d\d) - )?.*)/(\d{2,3}) - (.*)\.\w+" group="5" />
			</attributes>
		</filehandler>
		<filehandler id="COVER">
			<conditions>
				<virtualpath matches="/Albums/[^/]+/[^/]+/cover\.(jpg|jpeg|png)" />
			</conditions>
			<attributes>
				<attribute name="db:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="PLAYLIST">
			<conditions>
				<virtualpath matches="/Albums/[^/]+/[^/]+/playlist\.m3u" />
			</conditions>
			<attributes>
				<attribute name="db:export" value="false" />
			</attributes>
		</filehandler>
		<filehandler id="SINGLE">
			<conditions>
				<virtualpath matches="/Singles/([^/]+) - ([^/]+)\.mp3" />
			</conditions>
			<attributes>
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="db:export" value="true" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<attribute name="tag:album" value="#Single" />
				<regex-attribute name="tag:artist" pattern="/Singles/([^/]+) - ([^/]+)\.\w+" group="1" />
				<regex-attribute name="tag:title" pattern="/Singles/([^/]+) - ([^/]+)\.\w+" group="2" />
			</attributes>
		</filehandler>
		<filehandler id="SAGA">
			<conditions>
				<virtualpath matches="/Saga/([^/]+)/([^/]+)\.mp3" />
			</conditions>
			<attributes>
				<attribute name="rtfm:tagged" value="false" />
				<attribute name="db:export" value="true" />
				<attribute name="tag:comment" value="Tagged with RegexTagForMusic" />
				<attribute name="tag:album" value="#Saga" />
				<regex-attribute name="tag:artist" pattern="/Saga/([^/]+)/([^/]+)\.\w+" group="1" />
				<regex-attribute name="tag:title" pattern="/Saga/([^/]+)/([^/]+)\.\w+" group="2" />
			</attributes>
		</filehandler>
		<filehandler id="FOLDER">
			<conditions>
				<virtualpath matches="/Albums/[^/]+/[^/]+/" />
			</conditions>
			<attributes>
				<attribute name="hasCover" value="false" />
				<attribute name="db:export" value="false" />
				<regex-attribute name="artist" pattern="/Albums/(.*)/(?:([12]\d\d\d) - )?(.*)/" group="1" />
				<regex-attribute name="year" pattern="/Albums/(.*)/(?:([12]\d\d\d) - )?(.*)/" group="2" optional="true" />
				<regex-attribute name="album" pattern="/Albums/(.*)/(?:([12]\d\d\d) - )?(.*)/" group="3" />
			</attributes>
		</filehandler>
		<filehandler id="UNKNOWN">
			<conditions>
				<virtualpath matches=".*[^/]" />
			</conditions>
			<attributes>
				<attribute name="db:export" value="false" />
			</attributes>
		</filehandler>
	</filehandlers>
	<!-- Tasks -->
	<tasks>
		<task id="setNonTagged" classname="org.essembeh.rtfm.tasks.UpdateAttributes">
			<property name="rtfm:tagged" value="false" />
		</task>
		<task id="setTagged" classname="org.essembeh.rtfm.tasks.UpdateAttributes">
			<property name="rtfm:tagged" value="true" />
		</task>
		<task id="JAudioTagger-id3v2.4" classname="org.essembeh.rtfm.tasks.JAudioTagger">
			<property name="version" value="ID3V2_4" />
		</task>
		<task id="JAudioTagger-id3v2.3" classname="org.essembeh.rtfm.tasks.JAudioTagger">
			<property name="version" value="ID3V2_3" />
		</task>
		<task id="eyed3-id3v2.4@utf8" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary" value="scripts/eyeD3-tag.sh" />
			<property name="env.set" value="TAG_VERSION=ID3V2_4" />
			<property name="env.set" value="TAG_FORCEUTF8=true" />
			<property name="env.set" value="RTFM_ARTIST=${tag:artist}" />
			<property name="env.set" value="RTFM_ALBUM=${tag:album}" />
			<property name="env.set" value="RTFM_YEAR=${tag:year}" />
			<property name="env.set" value="RTFM_TITLE=${tag:title}" />
			<property name="env.set" value="RTFM_TRACK=${tag:track}" />
			<property name="env.set" value="RTFM_GENRE=${tag:genre}" />
			<property name="env.set" value="RTFM_COMMENT=${tag:comment}" />
		</task>
		<task id="eyed3-id3v2.3" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary" value="scripts/eyeD3-tag.sh" />
			<property name="env.set" value="TAG_VERSION=ID3V2_3" />
			<property name="env.set" value="TAG_FORCEUTF8=true" />
			<property name="env.set" value="RTFM_ARTIST=${tag:artist}" />
			<property name="env.set" value="RTFM_ALBUM=${tag:album}" />
			<property name="env.set" value="RTFM_YEAR=${tag:year}" />
			<property name="env.set" value="RTFM_TITLE=${tag:title}" />
			<property name="env.set" value="RTFM_TRACK=${tag:track}" />
			<property name="env.set" value="RTFM_GENRE=${tag:genre}" />
			<property name="env.set" value="RTFM_COMMENT=${tag:comment}" />
		</task>
		<task id="eyed3-clean" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary" value="scripts/eyeD3-remove.sh" />
		</task>
		<task id="echo" classname="org.essembeh.rtfm.tasks.ExternalProcess">
			<property name="binary" value="scripts/dummy.sh" />
			<property name="env.set" value="RTFM_ARTIST=${tag:artist}" />
			<property name="env.set" value="RTFM_ALBUM=${tag:album}" />
			<property name="env.set" value="RTFM_YEAR=${tag:year}" />
			<property name="env.set" value="RTFM_TITLE=${tag:title}" />
			<property name="env.set" value="RTFM_TRACK=${tag:track}" />
			<property name="env.set" value="RTFM_GENRE=${tag:genre}" />
			<property name="env.set" value="RTFM_COMMENT=${tag:comment}" />
		</task>
		<task id="downloadCover" classname="org.essembeh.rtfm.tasks.Echo">
			<property name="message" value="download cover" />
		</task>
		<task id="delete" classname="org.essembeh.rtfm.tasks.Echo">
			<property name="message" value="remove the file" />
		</task>
	</tasks>
	<actions>
		<action id="00-marskAsNonTagged" description="Mark as non tagged">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="setNonTagged" />
			</workflow>
		</action>
		<action id="10-tagEyeD3" description="Tag with eyed3">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="eyed3-clean" />
				<task ref-id="setNonTagged" />
				<task ref-id="eyed3-id3v2.4@utf8" />
				<task ref-id="setTagged" />
			</workflow>
		</action>
		<action id="11-tagJAudioTagger" description="Tag with JAudioTagger">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="JAudioTagger-id3v2.4" />
			</workflow>
		</action>
		<action id="20-removeTags" description="Remove tags using eyed3">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="eyed3-clean" />
				<task ref-id="setNonTagged" />
			</workflow>
		</action>
		<action id="99-dummy" description="Dummy script">
			<apply-on>
				<filehandler ref-id="ALBUMS" />
				<filehandler ref-id="SINGLE" />
				<filehandler ref-id="SAGA" />
			</apply-on>
			<workflow>
				<task ref-id="echo" />
			</workflow>
		</action>
	</actions>
</configuration-core>