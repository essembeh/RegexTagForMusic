{
  "commands": {
    "eyed3-clean": [
      "eyeD3",
      "--no-color",
      "--remove-all",
      "${path}"
    ],
    "eyed3-tag": [
      "eyeD3",
      "--no-color",
      "--artist=${ARTIST}",
      "--album=${ALBUM}",
      "--year=${YEAR}",
      "--track=${TRACK}",
      "--title=${TITLE}",
      "--comment=::Tagged with rtfm",
      "${path}"
    ],
    "eyed3-utf8": [
      "eyeD3",
      "--no-color",
      "--set-encoding=utf8",
      "--force-update",
      "${path}"
    ],
    "delete": [
      "rm",
      "${path}"
    ]
  },
  "types": {
    "album": {
      "pattern": ".*/Albums/(?<ARTIST>[^/]+)/(?<ALBUM>(?:(?<YEAR>[12]\\d{3}) - )?[^/]+)/(?<TRACK>\\d{2,3}) - (?<TITLE>[^/]+)\\.mp3",
      "variables": {
        "YEAR": ""
      },
      "workflow": [
        "eyed3-clean",
        "eyed3-tag",
        "eyed3-utf8"
      ]
    },
    "cover": {
      "pattern": ".*/Albums/[^/]+/[^/]+/cover.jpg"
    },
    "single": {
      "pattern": ".*/Singles/(?<ARTIST>[^/]+) - (?<TITLE>[^/]+)\\.mp3",
      "variables": {
        "ALBUM": "#Single",
        "YEAR": "",
        "TRACK": ""
      },
      "workflow": [
        "eyed3-clean",
        "eyed3-tag",
        "eyed3-utf8"
      ]
    },
    "saga": {
      "pattern": ".*/Saga/(?<ARTIST>[^/]+)/(?<TITLE>[^/]+)\\.mp3",
      "variables": {
        "ALBUM": "#Saga",
        "YEAR": "",
        "TRACK": ""
      },
      "workflow": [
        "eyed3-clean",
        "eyed3-tag",
        "eyed3-utf8"
      ]
    },
    "junk": {
      "pattern": ".*/\\.DS_Store",
      "workflow": [
        "delete"
      ]
    }
  }
}
